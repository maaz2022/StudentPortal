@{
}
@model List<StudenPortal.Models.Entities.Student>
<h1>All Students</h1>
<table class="table">
    <thead>
       <tr>
            <th>ID</th>
            <th>NAME</th>
            <th>EMAIL</th>
            <th>PHONE</th>
            <th>SUBSCRIBED</th>
       </tr>
    </thead>
    <tbody>
        @foreach(var students in Model)
        {
            <tr>
                <td>@students.Id</td>
                <td>@students.Name</td>
                <td>@students.Email</td>
                <td>@students.Phone</td>
                <td>@students.Subscribed</td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-controller="Students" asp-route-id="@students.Id">Edit</a>
                </td>
                       <td>
        <form method="post" asp-action="Delete" asp-controller="Students">
            <input type="hidden" name="Id" value="@students.Id" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </td>

            </tr>
        }
    </tbody>

</table>
